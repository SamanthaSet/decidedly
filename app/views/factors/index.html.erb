<div class="page-header">
  <h1>
    Factors
    <a href="/factors/new" class="btn btn-lg btn-success">New Factor</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Decision</th>
        <th>Factor name</th>
        <th>Ranking</th>
        <th>Actions</th>
      </tr>

      <% @factors.each do |factor| %>
      <% if current_user.id == factor.decision.user.id %>

      <tr>
        <td><%= factor.decision_id %></td>
        <td><%= factor.factor_name %></td>
        <td><%= factor.ranking %></td>
        <td>
          <a href="/factors/<%= factor.id %>" class="btn btn-primary">Show</a>
          <a href="/factors/<%= factor.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_factor/<%= factor.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
