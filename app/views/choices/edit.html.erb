<% if current_user.id == @choice.decision.user.id %>


<!-- Validation failure messages -->
<% if @choice.errors.any? %>
  <% @choice.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Choice Name</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_choice/<%= @choice.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for decision_id -->

        <input type="hidden" id="decision_id" name="decision_id" placeholder="Decision" class="form-control" value="<%= @choice.decision_id %>">


      <!-- Label and input for choice_name -->
      <div class="form-group">
        <input type="text" id="choice_name" name="choice_name" placeholder="Choice name" class="form-control" value="<%= @choice.choice_name %>">
      </div>

      <button class="btn btn-warning">
        Update Choice
      </button>
      or
      <a href="/decisions/<%= @choice.decision_id %>">Cancel</a>
    </form>
  </div>
</div>
<% end %>
