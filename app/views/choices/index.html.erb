
<div class="page-header">
  <h1>
    Choices
    <a href="/choices/new" class="btn btn-lg btn-success">New Choice</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Decision</th>
        <th>Choice name</th>
        <th>Actions</th>
      </tr>

      <% @choices.each do |choice| %>
      <% if current_user.id == choice.decision.user.id %>

      <tr>
        <td><%= choice.decision_id %></td>
        <td><%= choice.choice_name %></td>
        <td>
          <a href="/choices/<%= choice.id %>" class="btn btn-primary">Show</a>
          <a href="/choices/<%= choice.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_choice/<%= choice.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
