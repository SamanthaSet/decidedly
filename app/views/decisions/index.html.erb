

<div class="page-header">
  <h1>
    My Decisions
    <a href="/decisions/new" class="btn btn-lg btn-success">New Decision</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>

      <% @decisions.each do |decision| %>

      <% if current_user.id == decision.user.id %>

      <tr>
        <td><%= decision.description %></td>
        <td><%= time_ago_in_words(decision.created_at) %> ago</td>
        <td>
          <a href="/decisions/<%= decision.id %>" class="btn btn-primary">Go to Analysis</a>
          <a href="/decisions/<%= decision.id %>/edit" class="btn btn-warning">Edit Description</a>
          <a href="/delete_decision/<%= decision.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>

      <% end %>

      <% end %>
    </table>
  </div>
</div>
